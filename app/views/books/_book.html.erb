<div class="col-sm-4">
  <li class="book_item">
    <%= link_to image_tag("1.jpg", alt: "Image",
      class: "img-responsive")%>
    <p><%= link_to book.name, "#" %></p>
    <p><%= link_to book.author, "#" %></p>
    <p><%= number_to_currency book.price %></p>
    <%= button_to t(".add_to_cart"), cart_items_path(book_id: book.id),
    class: "btn btn-primary" %>
  </li>
</div>
