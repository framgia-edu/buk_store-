<% provide :title, t("home_title") %>
<div class="container text-center">
  <div class="jumbotron">
    <div class="container text-center">
      <h1><%= t "title_full" %></h1>
    </div>
  </div>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col-md-3">
      <div class="category_left">
        <ol class="list_category">
          <% @categories.each do |category| %>
            <li class="category">
              <%= link_to "books" do %>
                <%= link_to category.category_name, "#" %>
                <%= category.books.count %>
              <% end %>
            </li>
          <% end %>
        </ol>
      </div>
    </div>
    <div class="col-md-9">
      <div class="category_book">
        <%= render "search/search" %>
      </div>
    </div>
  </div>
</div>
